{
  "name": "dinstar-softphone",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.dinstarsoftphone",
    "productName": "Dinstar Softphone",
    "files": [
      "web-dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron/dist/icudtl.dat",
        "to": "icudtl.dat"
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "sip.js": "^0.21.2"
  }
}
